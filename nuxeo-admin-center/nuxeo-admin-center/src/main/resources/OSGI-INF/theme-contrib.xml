<?xml version="1.0"?>

<component name="org.nuxeo.ecm.admin.center.theme">

  <require>org.nuxeo.theme.core</require>
  <require>org.nuxeo.theme.fragments</require>
  <require>org.nuxeo.theme.html</require>
  <require>org.nuxeo.theme.jsf</require>

  <!--  themes -->
  <extension target="org.nuxeo.theme.services.ThemeService" point="themes">

    <theme>
      <!--src>themes/theme-galaxy-admin.xml</src-->
      <src>themes/theme-galaxy-admin-new.xml</src>
    </theme>

  </extension>

  <!--extension target="org.nuxeo.theme.services.ThemeService" point="views">

    <view name="Nuxeo DM logo (Galaxy Admin Theme)"
      template-engine="jsf-facelets">
      <format-type>widget</format-type>
      <template>incl/logo_DM_galaxy_admin.xhtml</template>
    </view>
    
  </extension-->

  <!-- application settings -->
  <extension target="org.nuxeo.theme.services.ThemeService"
    point="applications">

    <application root="${org.nuxeo.ecm.contextPath}"
      template-engine="jsf-facelets">

      <view id="/view_admin.xhtml">
        <theme>admin/default</theme>
      </view>

      <view id="/connect_confirm_download.xhtml">
        <theme>admin/default</theme>
      </view>

    </application>

  </extension>
  
  <!-- mapping between theme pages and resources -->
  <!--  -->

  <extension target="org.nuxeo.theme.styling.service" point="pages">

    <themePage name="admin/default">
      <defaultFlavor>default</defaultFlavor>
      <flavors>
        <flavor>default</flavor>
        <flavor>dark</flavor>
      </flavors>
      <styles>
        <style>basics</style>
        <style>buttons_and_actions</style>
        <style>header</style>
        <style>body</style>
        <style>footer</style>
        <style>navigation</style>
        <style>tables</style>
        <style>forms</style>
        <style>messages_and_tooltips</style>
        <style>foldable_boxes</style>
        <style>richfaces_components</style>
        <style>tabs_content</style>
        <style>activity_stream</style>
        <style>mini_messages</style>
        <style>relationship_network</style>
        <style>user_profile</style>
        <style>nuxeo_admincenter_specific</style>
      </styles>
    </themePage>

  </extension>

  <extension target="org.nuxeo.theme.styling.service" point="styles">
    <style name="nuxeo_admincenter_specific">
      <path>themes/css/nuxeo_admincenter_specific.css</path>
    </style>
  </extension>


  <!-- Styles presets -->
  <extension target="org.nuxeo.theme.services.ThemeService" point="presets">

    <palette name="Galaxy Admin borders"
      src="themes/palettes/galaxy-admin-borders.properties" category="border" />
    <palette name="Galaxy Admin backgrounds"
      src="themes/palettes/galaxy-admin-backgrounds.properties"
      category="background" />
    <palette name="Galaxy Admin fonts"
      src="themes/palettes/galaxy-admin-fonts.properties" category="font" />
    <palette name="Galaxy Admin colors"
      src="themes/palettes/galaxy-admin-colors.properties" category="color" />

  </extension>

</component>
