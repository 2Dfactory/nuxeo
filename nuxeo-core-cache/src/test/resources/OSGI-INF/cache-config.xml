<?xml version="1.0"?>
<component name="org.nuxeo.ecm.core.cache.config">

  <extension target="org.nuxeo.ecm.core.cache.CacheServiceImpl" point="caches">

    <cache name="default-test-cache" class="org.nuxeo.ecm.core.cache.CacheImpl">
      <maxSize>3</maxSize>
      <ttl>1</ttl><!-- minutes -->
      <concurrency-level>1</concurrency-level>
    </cache>

    <cache name="maxsize-test-cache" class="org.nuxeo.ecm.core.cache.CacheImpl">
      <maxSize>0</maxSize>
      <ttl>1</ttl><!-- minutes -->
      <concurrency-level>1</concurrency-level>
    </cache>
    

  </extension>

</component>
