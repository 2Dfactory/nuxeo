<?xml version="1.0"?>

<!--
  Please ensure that any change to these declarations respects the
  specifications in the file org.nuxeo.ecm.core.repository/doc/NXCore-Security.txt
-->

<permissions>

  <!-- The "everything" permission is builtin -->
  <permission name="ReadWrite"/>
  <permission name="ReadRemove"/>
  <permission name="Read" groups="ReadWrite, ReadRemove"/>
  <permission name="RestrictedRead" />
  <permission name="ReadSecurity" groups="Read" />
  <permission name="Version" groups="Read" />
  <permission name="ReadProperties" groups="Read" />
  <permission name="ReadChildren" groups="Read" />
  <permission name="Browse" groups="ReadProperties" />

  <permission name="Write" groups="ReadWrite"/>
  <permission name="WriteSecurity" />
  <permission name="AddChildren" groups="Write" />
  <permission name="RemoveChildren" groups="Remove" />
  <permission name="WriteProperties" groups="Write" />

  <permission name="Remove" groups="Write, ReadRemove" />

  <permission name="ReadLifeCycle" groups="Read" />
  <permission name="WriteLifeCycle" groups="Write" />

  <permission name="ReviewParticipant" groups="Read, RestrictedRead" />
  <permission name="ManageWorkflows" groups="Write" />

</permissions>
