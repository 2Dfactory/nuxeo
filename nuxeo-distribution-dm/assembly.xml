    <zip destfile="${outdir}/${maven.project.artifactId}-${maven.project.version}.zip"
      basedir="${nuxeo.ear}" />
    <artifact:attach
      file="${outdir}/${maven.project.artifactId}-${maven.project.version}.zip"
      target="${maven.project.groupId}:${maven.project.artifactId}" />
  </target>

  <target name="clean">
    <delete dir="${stagedir}" />
  </target>

</project>
