<packages>
 <packageDefinitions baseUrl="http://community.nuxeo.com/static/releases/nuxeo-@VERSION@/mp/">
  <package id="cap" label="Basic / Naked (CAP)" md5="" color="#333" textcolor="#FFF"/>
  <package id="dm" label="Advanced Document Management (DM)" filename="nuxeo-dm.zip" md5="@DMMPMD5@" implies="nuxeo-content-browser" color="#3399CC" textcolor="#FFF"/>
  <package id="dam" label="Digital Assets Management features (DAM)" filename="nuxeo-dam.zip" md5="" implies="nuxeo-content-browser" color="#ffde00" textcolor="#000"/>
  <package id="collab" label="Collaboration features (social collab)" filename="nuxeo-collab.zip" md5="" color="#CC3333" textcolor="#FFF"/>
  <package id="cmf" label="Case Management Framework (CMF)" filename="nuxeo-cmf.zip" md5="" implies="nuxeo-content-browser-cmf" color="#66CC33" textcolor="#FFF"/>
  <package id="nuxeo-content-browser" label="Standard Content Browser" filename="nuxeo-content-browser.zip" md5="@VPCBMPMD5@"/>
  <package id="nuxeo-content-browser-cmf" label="CMF Content Browser" filename="nuxeo-content-browser-cmf.zip" md5=""/>
 </packageDefinitions>
 <install>
  <packageOptions>
   <package ref="cap" exclusive="false">
     <package ref="dm" exclusive="false">
       <package ref="collab" exclusive="false"/>
     </package>
     <package ref="dam" exclusive="false"/>
     <package ref="cmf" exclusive="true"/>
   </package>
 </packageOptions>
 </install>
 <presets>
  <preset id="nuxeo-dm" label="Nuxeo DM">cap,dm</preset>
  <preset id="nuxeo-cmf" label="Nuxeo CMF">cap,cmf</preset>
  <preset id="nuxeo-dam" label="Nuxeo DAM">cap,dam</preset>
 </presets>
</packages>

