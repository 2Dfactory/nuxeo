<?xml version="1.0"?>
<component name="org.nuxeo.runtime.server">
  <implementation
          class="org.nuxeo.runtime.jetty.JettyComponent" />
  <documentation>
    @author Bogdan Stefanescu (bs@nuxeo.com)
    Jetty Server
  </documentation>

  <service>
    <provide
      interface="org.mortbay.jetty.Server" />
  </service>

  <extension-point name="webapp">
    <object class="org.nuxeo.runtime.server.configuration.WebApplication"/>
  </extension-point>

  <extension-point name="datasource">
    <object class="org.nuxeo.runtime.server.configuration.DataSource"/>
  </extension-point>

</component>
