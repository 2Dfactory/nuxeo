            <layout name="TabWithHiddenSubs@tabLayout">
              <templates>
                <template mode="any">/layouts/studio_tab_layout_template.xhtml</template>
              </templates>
              <rows>
                <row>
                  <properties mode="any">
                    <property name="nxl_gridStyleClass_0">gridStyle12</property>
                  </properties>
                  <widget>container</widget>
