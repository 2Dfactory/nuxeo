<project>
	<build>
		<plugins>
			<plugin>
				<groupId>org.nuxeo.opensocial</groupId>
				<artifactId>maven-nuxeo-opensocial-plugin</artifactId>
				<configuration>
					<startShindig>true</startShindig>
					<run>
						org.nuxeo.opensocial.maven.ShindigServerDetector
					</run>
					<container>
						org.nuxeo.opensocial.gadgets.container
					</container>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
