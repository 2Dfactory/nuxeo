      <artifactId>nuxeo-spaces-api</artifactId>
    </dependency>


    <dependency>
      <groupId>org.nuxeo.opensocial</groupId>
      <artifactId>nuxeo-spaces-core</artifactId>
      <scope>test</scope>
    </dependency>
	
	<dependency>
      <groupId>org.nuxeo.opensocial</groupId>
      <artifactId>nuxeo-webengine-gadgets</artifactId>
	  <version>1.0-SNAPSHOT</version>
