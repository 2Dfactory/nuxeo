<?xml version="1.0"?>

<component name="org.nuxeo.opensocial.dashboard.themeContrib">

	<require>org.nuxeo.theme.core</require>
	<require>org.nuxeo.theme.fragments</require>
	<require>org.nuxeo.theme.html</require>
    <require>org.nuxeo.theme.jsf</require>
    
    <!-- override defaults! -->
    <!--   
    <require> org.nuxeo.ecm.webapp.core</require>
    -->

	<!--  themes -->
	<extension target="org.nuxeo.theme.services.ThemeService"
		point="themes">

		<theme>
			<src>themes/theme-galaxy.xml</src>
		</theme>

	</extension>


	<extension target="org.nuxeo.theme.services.ThemeService"
		point="views"> <!-- was fragments -->
		
      <view name="nuxeo5 opensocial_dashboard" template-engine="jsf-facelets">
        <format-type>widget</format-type>
        <template>opensocial-dashboard.xhtml</template>

            <!-- include JS for contextual menu -->
            <resource>opensocial-jquery.js</resource>
            <resource>opensocial-jquery-cookie.js</resource>
            <resource>opensocial-jquery-menu.js</resource>
            <resource>opensocial-loading.js</resource>
            <resource>opensocial-thickbox.js</resource>
            <resource>opensocial-initMenu.js</resource>
            <resource>opensocial-layoutManager.js</resource>
            <resource>opensocial-gadgetManager.js</resource>
            <resource>opensocial-getGwtParams.js</resource>
      </view>
		
	</extension>
	
     <extension target="org.nuxeo.theme.services.ThemeService" point="resources">
     <resource name="opensocial-jquery.js">
      <path>opensocial/js/jquery-1.3.2.min.js</path>
    </resource>
    
     <resource name="opensocial-jquery-cookie.js">
      <path>opensocial/js/jquery.cookie.js</path>
    </resource>

     <resource name="opensocial-jquery-menu.js">
      <path>opensocial/js/jquery.menu.js</path>
    </resource>

     <resource name="opensocial-loading.js">
      <path>opensocial/js/loading.js</path>
    </resource>

     <resource name="opensocial-thickbox.js">
      <path>opensocial/js/thickbox.js</path>
    </resource>

     <resource name="opensocial-initMenu.js">
      <path>opensocial/js/initMenu.js</path>
    </resource>

     <resource name="opensocial-layoutManager.js">
      <path>opensocial/js/layoutManager.js</path>
    </resource>

     <resource name="opensocial-gadgetManager.js">
      <path>opensocial/js/gadgetManager.js</path>
    </resource>
     <resource name="opensocial-getGwtParams.js">
      <path>opensocial/js/getGwtParams.js</path>
    </resource>
	 
	</extension>
</component>
  