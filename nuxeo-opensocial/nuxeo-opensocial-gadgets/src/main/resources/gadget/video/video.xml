<?xml version="1.0" encoding="UTF-8"?>
<Module>
  <ModulePrefs title="__UP_title__" category="tools"
    render_inline="required" scrolling="false" author="" directory_title="Video"
    singleton="false">
    <Require feature="opensocial-0.8" />
    <Require feature="dynamic-height" />
    <Require feature="setprefs" />
    <Require feature="settitle" />
    <Require feature="nuxeo" />
    <Require feature="jquery" />
  </ModulePrefs>
  <UserPref name="title" display_name="Title" required="false"
    default_value="Video" />
     <UserPref name="vidTitle" datatype="hidden"/>
  <Content type="html">
    <![CDATA[
      <style type='text/css'>
        *{
         font-family:Trebuchet, Arial,Verdana;
         font-size:11px;
        }

        #baliseVideo{
         border:1px solid #000000;
         width:80%;
         display:block;
         margin:auto;
        }

        #container{
         padding:0 0 5px 0;
        }

        #addVideo,#showVideo{
         display:none;
        }

        input{
         width:250px;
         border:1px solid #000000;
        }

        #title{
          text-align:center;
          font-size:14px;
          color:#13506B;
          font-weight:bold;
        }

        label{
         width:40px;
         display:inline-block;
        }

      </style>

      <script type="text/javascript" language="javascript" src="video.js"></script>
      <script type="text/javascript">
        var prefs = new _IG_Prefs(__MODULE_ID__);
        _IG_SetTitle(prefs.getString("title"));

        gadgets.util.registerOnLoadHandler( function() {
           gadgets.nuxeo.getHtmlContent(function(content) {
             launchVideoWidget(content);
           });
        })
      </script>

      <div id="addVideo">
        <div style="float:right;"><a href="javascript:cancelVideo();" id="cancelVideo">Annuler</a></div>
        <span>Veuillez copier une balise vid√©o</span>
        <div>
            <label>Titre : </label>
          <input type="text" name="title" id="title-field" value="">
        </div>
        <div id="container">
           <label>Balise : </label>
          <textarea name="baliseVideo" id="baliseVideo"></textarea>
        </div>
        <div>
          <a href="javascript:validateVideo()">Valider</a>
        </div>

      </div>

      <div id="showVideo">

      </div>


    ]]>
  </Content>
</Module>