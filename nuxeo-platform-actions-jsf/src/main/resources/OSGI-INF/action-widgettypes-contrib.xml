    <widgetType name="link">
      <categories>
        <category>jsf_action</category>
      </categories>
      <configuration>
        <sinceVersion>5.7.3</sinceVersion>
        <title>Link</title>
        <description>
          Widget displaying a link for an action.
        </description>
        <categories>
          <category>action</category>
        </categories>
        <supportedModes>
          <mode>view</mode>
        </supportedModes>
        <properties>
          <layouts mode="view">
            <layout name="link_action_widget_type_properties_view">
              <rows>
                <row>
                  <widget category="actionWidgetTypeConf">documentSuggestion_tab</widget>
                </row>
                <row>
                  <widget category="widgetTypeConf">documentSuggestion_subTab</widget>
                </row>
              </rows>
            </layout>
          </layouts>
        </properties>
      </configuration>
      <handler-class>
        org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
      </handler-class>
      <property name="template">
        /incl/action/link_action_template.xhtml
      </property>
    </widgetType>

