<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.login.shibboleth">

  <extension
    target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService"
    point="authenticators">
    <authenticationPlugin
        name="SHIB_AUTH"
        enabled="true"
        class="org.nuxeo.ecm.platform.ui.web.auth.shib.ShibbolethAuthenticationPlugin">
      <loginModulePlugin>Trusting_LM</loginModulePlugin>
    </authenticationPlugin>
  </extension>

  <extension
    target="org.nuxeo.ecm.platform.ui.web.auth.shib.ShibbolethAuthenticationService"
    point="config">
    <config>
      <uidHeader>uid</uidHeader>

      <fieldMapping header="uid">username</fieldMapping>
      <fieldMapping header="mail">email</fieldMapping>
    </config>
  </extension>

</component>
