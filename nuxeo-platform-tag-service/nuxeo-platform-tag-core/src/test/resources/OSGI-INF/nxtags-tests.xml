<component name="org.nuxeo.ecm.platform.tag.tests.config">

  <extension target="org.nuxeo.ecm.core.persistence.PersistenceComponent"
		point="hibernate">
		<hibernateConfiguration name="nxtags">
		  <properties>
            <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/nuxeojunittests</property>;
            <property name="hibernate.connection.user">nuxeo</property>
            <property name="hibernate.connection.password">nuxeo</property>
            <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
            <property name="hibernate.connection.auto_commit">true</property> 
        	<property name="hibernate.connection.pool_size">1</property>;
        	<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>;
        	<property name="hibernate.hbm2ddl.auto">false</property>;
        	<property name="hibernate.show_sql">true</property>; // true to debug
        	<property name="hibernate.format_sql">true</property>;
		   </properties>
		</hibernateConfiguration>
  </extension>
  
</component>