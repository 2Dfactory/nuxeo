<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.tag.theme.contrib">

  <require>org.nuxeo.theme.core</require>
  <require>org.nuxeo.theme.fragments</require>
  <require>org.nuxeo.theme.html</require>
  <require>org.nuxeo.theme.jsf</require>

  <!-- views -->
  <extension target="org.nuxeo.theme.services.ThemeService" point="views">

    <view name="nuxeo5 tagging" template-engine="jsf-facelets">
      <format-type>widget</format-type>
      <template>incl/incl/summary/tagging.xhtml</template>
    </view>
    
    <view name="nuxeo5 tags cloud" template-engine="jsf-facelets">
      <format-type>widget</format-type>
      <template>incl/incl/summary/tagsCloud.xhtml</template>
    </view>

  </extension>

</component>
