    <layout name="testSelect2">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml
        </template>
      </templates>
      <rows>
        <row>
          <widget>select2A</widget>
        </row>
        <row>
          <widget>select2B</widget>
        </row>
        <row>
          <widget>select2C</widget>
