<?xml version="1.0"?>
<component name="org.nuxeo.ecm.directory.sql.storage">

  <implementation
      class="org.nuxeo.ecm.directory.sql.SQLDirectoryDescriptor"/>

  <require>org.nuxeo.ecm.directory.sql.SQLDirectoryFactory</require>

  <implementation
      class="org.nuxeo.ecm.directory.sql.SQLDirectoryDescriptor"/>

  <require>org.nuxeo.ecm.directory.sql.SQLDirectoryFactory</require>

  <extension target="org.nuxeo.ecm.directory.sql.SQLDirectoryFactory"
      point="directories">

    <directory name="userDirectory_tenanta">

      <schema>user</schema>

      <dbDriver>org.hsqldb.jdbcDriver</dbDriver>
      <dbUrl>jdbc:hsqldb:mem:memid</dbUrl>
      <dbUser>sa</dbUser>
      <dbPassword></dbPassword>

      <table>users</table>
      <idField>username</idField>
      <passwordField>password</passwordField>

      <autoincrementIdField>false</autoincrementIdField>
      <dataFile>test-usermanagerimpl/directories/users_tenanta.csv</dataFile>
      <createTablePolicy>always</createTablePolicy>

      <references>
        <tableReference field="groups" directory="groupDirectory"
            table="user2group" sourceColumn="userId"
            targetColumn="groupId" dataFile="user2group.csv"
            master="true"/>
      </references>

    </directory>

    <directory name="groupDirectory">

      <schema>group</schema>

      <dbDriver>org.hsqldb.jdbcDriver</dbDriver>
      <dbUrl>jdbc:hsqldb:mem:memid</dbUrl>
      <dbUser>sa</dbUser>
      <dbPassword></dbPassword>

      <table>groups</table>
      <idField>groupname</idField>
      <autoincrementIdField>false</autoincrementIdField>
      <dataFile>test-usermanagerimpl/directories/groups_multitenant.csv</dataFile>
      <createTablePolicy>always</createTablePolicy>

      <references>
        <inverseReference field="members" directory="userDirectory"
            dualReferenceField="groups"/>
        <tableReference field="subGroups" directory="groupDirectory"
            table="group2group" sourceColumn="childGroupId"
            targetColumn="parentGroupId"/>
        <inverseReference field="parentGroups"
            directory="groupDirectory" dualReferenceField="subGroups"/>
      </references>
    </directory>
  </extension>
  
  <extension target="org.nuxeo.ecm.directory.sql.SQLDirectoryFactory"
      point="directories">

    <directory name="userDirectory_tenantb">

      <schema>user</schema>

      <dbDriver>org.hsqldb.jdbcDriver</dbDriver>
      <dbUrl>jdbc:hsqldb:mem:memid</dbUrl>
      <dbUser>sa</dbUser>
      <dbPassword></dbPassword>

      <table>users_tenanta</table>
      <idField>username</idField>
      <passwordField>password</passwordField>

      <autoincrementIdField>false</autoincrementIdField>
      <dataFile>test-usermanagerimpl/directories/users_tenantb.csv</dataFile>
      <createTablePolicy>always</createTablePolicy>

      <references>
        <tableReference field="groups" directory="groupDirectory"
            table="user2group" sourceColumn="userId"
            targetColumn="groupId" dataFile="user2group.csv"
            master="true"/>
      </references>

    </directory>
  </extension>
    
      <extension
    target="org.nuxeo.ecm.directory.multi.MultiDirectoryFactory"
    point="directories">

    <directory name="userDirectory">
      <schema>user</schema>
      <idField>username</idField>
      <passwordField>password</passwordField>

      <source name="source1">
        <subDirectory name="userDirectory_tenanta" />
      </source>
      <source name="source2">
        <subDirectory name="userDirectory_tenantb" />
      </source>
      <references>
        <tableReference field="groups" directory="groupDirectory"
            table="user2group" sourceColumn="userId"
            targetColumn="groupId" dataFile="user2group.csv"
            master="true"/>
      </references>
    </directory>

  </extension>
  
</component>
