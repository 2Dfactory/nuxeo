<?xml version="1.0"?>
<component name="org.nuxeo.ecm.webapp.locale">
  <implementation
    class="org.nuxeo.ecm.webapp.locale.LocaleComponent" />
  <documentation>
    Provide user locale to seam application
  </documentation>
  
  <service>
    <provide interface="java.util.TimeZone" />
    <provide interface="java.util.Locale" />
    <provide interface="org.nuxeo.ecm.webapp.locale.LocaleProvider" />
  </service>
  <extension-point name="providers">
    <object
      class="org.nuxeo.ecm.webapp.locale.LocaleProviderDescriptor" />
  </extension-point>
  
</component>
