<?xml version="1.0"?>
<component name="org.nuxeo.runtime.metrics.defaultMetricsContrib">

  <extension target="org.nuxeo.runtime.metrics.MetricsService"
    point="configuration">
    <metrics>
      <graphiteReporter enabled="true" periodInSecond="10"
        host="localhost" port="2030" prefix="servers.${hostname}.nuxeo."/>
      <csvReporter enabled="true" periodInSecond="10"
        outputDir="${nuxeo.log.dir}" />
      <log4jInstrumentation enabled="true" />
    </metrics>
  </extension>

</component>
