<?xml version="1.0"?>

<component name="org.nuxeo.theme.webwidgets.samples">
  <documentation>
    @author Jean-Marc Orliaguet (jmo@chalmers.se)
  </documentation>

  <require>org.nuxeo.theme.core</require>
  
  <!-- Sample widgets -->
  <extension target="org.nuxeo.theme.webwidgets.Service"
    point="widgets">

    <widget name="feed reader">
      <category>syndication</category>
      <path>nxthemes/webwidgets/samples/feedreader.html</path>
      <icon>nxthemes/webwidgets/samples/feed-reader.png</icon>
    </widget>

    <widget name="uwa module">
      <category>modules</category>
      <path>nxthemes/webwidgets/samples/uwa-module.html</path>
      <icon>nxthemes/webwidgets/samples/uwa-module.png</icon>
    </widget>

    <widget name="image box">
      <category>content</category>
      <path>nxthemes/webwidgets/samples/imagebox.html</path>
    </widget>

    <widget name="flash box">
      <category>content</category>
      <path>nxthemes/webwidgets/samples/flashbox.html</path>
    </widget>

  </extension>

</component>

