<component name="org.nuxeo.ecm.user.center.actions">

  <extension target="org.nuxeo.ecm.platform.actions.ActionService"
    point="actions">

    <action id="UserCenterMain" link="view_home" label="action.user.center"
      order="5">
      <category>USER_SERVICES</category>
    </action>

    <action id="user_center_non_anonymous_logout"
      link="#{loginLogoutAction.logout()}" label="command.logout">
      <category>USER_CENTER_USER_SERVICES</category>
      <filter-id>not_anonymous</filter-id>
    </action>

    <action id="user_center_login" link="#{loginLogoutAction.logout()}"
      label="command.login">
      <category>USER_CENTER_USER_SERVICES</category>
      <filter-id>anonymous</filter-id>
    </action>

    <action id="userCenterExit" link="#{adminViews.exit()}"
      label="action.user.center.exit">
      <category>USER_CENTER_USER_SERVICES</category>
    </action>

    <!-- Users and Groups directory -->
    <action id="UsersGroupsDirectory" link="user_center_fragment.xhtml"
      label="user.center.directory" order="60">
      <category>USER_CENTER</category>
      <filter-id>not_readonly</filter-id>
    </action>
    <action id="UsersDirectory" link="users/view_users.xhtml"
      label="label.userManager.users" order="10">
      <category>UsersGroupsDirectory_sub_tab</category>
      <filter-id>not_readonly</filter-id>
    </action>
    <action id="GroupsDirectory" link="users/view_groups.xhtml"
      label="label.groupManager.groups" order="20">
      <category>UsersGroupsDirectory_sub_tab</category>
      <filter-id>not_readonly</filter-id>
    </action>

  </extension>

</component>
