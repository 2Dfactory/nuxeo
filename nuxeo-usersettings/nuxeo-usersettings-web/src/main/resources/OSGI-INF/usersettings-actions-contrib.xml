<?xml version="1.0"?>
<component name="org.nuxeo.ecm.usersettings.web.ActionServiceContrib">

	<require>org.nuxeo.ecm.platform.actions.ActionService</require>

	<extension target="org.nuxeo.ecm.platform.actions.ActionService"
		point="actions">

		<action id="TAB_VIEW" link="/incl/tabs/document_view.xhtml"
			order="0" label="action.view.summary" icon="/icons/file.gif">
			<filter id="noViewForUserPrefs">
				<rule grant="false">
					<type>UserSettings</type>
				</rule>
			</filter>
		</action>

		<action id="TAB_EDIT" link="/incl/tabs/document_edit.xhtml"
			order="20" label="action.view.modification" icon="/icons/file.gif">
			<filter id="noRelationsForUserPrefs">
				<rule grant="false">
					<type>UserSettings</type>
				</rule>
			</filter>
		</action>


		<action id="TAB_RELATIONS" link="/incl/tabs/document_relations.xhtml"
			enabled="true" label="action.view.relations" order="55">
			<filter id="noRelationsForUserPrefs">
				<rule grant="false">
					<type>UserSettings</type>
				</rule>
			</filter>
		</action>

		<action id="TAB_MY_SUBSCRIPTIONS" link="/incl/tabs/document_subscriptions.xhtml"
			order="70" enabled="true" label="action.subscriptions.tab" icon="/icons/file.gif">
			<filter id="noSubscriptionsForUserPrefs">
				<rule grant="false">
					<type>UserSettings</type>
				</rule>
			</filter>
		</action>


		<action id="TAB_CONTENT_HISTORY" link="/incl/tabs/document_history.xhtml"
			enabled="true" label="action.view.history" icon="/icons/file.gif"
			order="100">
			<filter id="noHistoryForUserPrefs">
				<rule grant="false">
					<type>UserSettings</type>
				</rule>
			</filter>
		</action>


		<action id="TAB_MANAGE" link="/incl/tabs/document_manage.xhtml"
			order="240" label="action.view.manage" icon="/icons/file.gif">
			<filter id="noManagementForUserPrefs">
				<rule grant="false">
					<type>UserSettings</type>
				</rule>
			</filter>
		</action>

		<action id="TAB_FILES_EDIT" link="/incl/tabs/document_files_edit.xhtml"
			order="43" label="action.view.files">
			<filter id="noFilesForUserPrefs">
				<rule grant="false">
					<type>UserSettings</type>
				</rule>
			</filter>
		</action>

		<action id="TAB_CONTENT" link="/incl/tabs/document_content.xhtml"
			order="10" label="action.view.content" icon="/icons/file.gif">
			<category>VIEW_ACTION_LIST</category>
			<filter id="noContentForUserPrefs">
				<rule grant="false">
					<type>UserSettings</type>
				</rule>
			</filter>
		</action>

		<action id="TAB_SECTION_CONTENT" link="/incl/tabs/section_content.xhtml"
			order="10" label="action.view.content" icon="/icons/file.gif">
			<category>VIEW_ACTION_LIST</category>
			<filter id="noSectionForUserPrefs">
				<rule grant="false">
					<type>UserSettings</type>
				</rule>
			</filter>
		</action>

		<action id="TAB_WEBVIEW" link="/incl/tabs/workspace_view.xhtml"
			enabled="true" order="30" label="action.webcontainer.preview" icon="/icons/file.gif">
			<category>VIEW_ACTION_LIST</category>
			<filter id="noWebViewForUserPrefs">
				<rule grant="false">
					<type>UserSettings</type>
				</rule>
			</filter>
		</action>

		<action id="newDocument"
			link="javascript:Richfaces.showModalPanel('selectDocTypePanel');"
			label="action.new.document" icon="/icons/action_add.gif">
			<category>SUBVIEW_UPPER_LIST_HREF</category>
			<filter id="noNewForUserPrefs">
				<rule grant="false">
					<type>UserSettings</type>
				</rule>
			</filter>

		</action>

		<action id="newFile" link="javascript:Richfaces.showModalPanel('importFile');"
			label="action.new.file" icon="/icons/action_add_file.gif">
			<category>SUBVIEW_UPPER_LIST_HREF</category>
			<filter id="noNewForUserPrefs">
				<rule grant="false">
					<type>UserSettings</type>
				</rule>
			</filter>
		</action>



		<action id="TAB_SETTINGS_CONTENT" link="/incl/tabs/settingsfolder_content.xhtml"
			order="10" label="action.view.settings" icon="/icons/file.gif">
			<category>VIEW_ACTION_LIST</category>
			<filter id="contentForUserPrefs">
				<rule grant="true">
					<type>UserSettings</type>
				</rule>
			</filter>
		</action>


		<action id="userSettings"
			link="#{userSettingsActions.navigateToCurrentUserSettings}" label="command.usersettings"
			order="190">
			<category>USER_SERVICES</category>
			<filter id="userSettingsLink">
				<rule grant="false">
					<condition>#{currentUser.anonymous}</condition>
				</rule>
			</filter>
		</action>

	</extension>

</component>