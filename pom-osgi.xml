  <modules>
    <module>nuxeo-common/osgi</module>
    <module>nuxeo-runtime/nuxeo-runtime/osgi</module>
    <module>nuxeo-runtime/nuxeo-runtime-jtajca/osgi</module>
    <module>nuxeo-runtime/nuxeo-runtime-jetty-adapter/osgi</module>
    <module>nuxeo-runtime/nuxeo-runtime-start/osgi</module>
    <module>nuxeo-core/nuxeo-core-schema/osgi</module>
    <module>nuxeo-core/nuxeo-core-query/osgi</module>
    <module>nuxeo-core/nuxeo-core-event/osgi</module>
    <module>nuxeo-core/nuxeo-core-api/osgi</module>
    <module>nuxeo-core/nuxeo-core-auth/osgi</module>
    <module>nuxeo-core/nuxeo-core/osgi</module>
    <module>nuxeo-core/nuxeo-core-convert-api/osgi</module>
    <module>nuxeo-core/nuxeo-core-convert/osgi</module>
    <module>nuxeo-core/nuxeo-core-storage-sql/nuxeo-core-storage-sql/osgi</module>
	<module>nuxeo-core/nuxeo-core-storage-sql/nuxeo-core-storage-sql-ra/osgi</module>
	<module>nuxeo-core/nuxeo-core-storage-sql/nuxeo-core-storage-sql-extensions/osgi</module>

    <!-- H2 integration-->
    <module>nuxeo-distribution/nuxeo-distribution-osgi/nuxeo-core-storage-h2/osgi</module>
    <module>nuxeo-distribution/nuxeo-distribution-osgi/h2-extensions-fragment/osgi</module>

    <!-- jax-rs integration -->
	<module>nuxeo-webengine/nuxeo-webengine-jaxrs/osgi</module>


    <!-- ================= optional bundles ================ -->
    <module>nuxeo-core/nuxeo-core-io/osgi</module>
    <!-- TODO: management should be optional - but I think it will not work if we remove it -->
    <module>nuxeo-runtime/nuxeo-runtime-management/osgi</module>
    <module>nuxeo-runtime/nuxeo-runtime-management-metrics/osgi</module>
    <module>nuxeo-core/nuxeo-core-management/osgi</module>

	<!-- used by jaxrs integration if you need ftl views support -->
	<module>nuxeo-services/nuxeo-platform-rendering/osgi</module>

  </modules>

      <properties>
        <tycho-version>0.10.0</tycho-version>
      </properties>
      <repositories>
		<repository>
			<id>helios</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/releases/helios</url>
		</repository>
		<!--repository>
			<id>test</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/eclipse/updates/3.6-JUnit-Tests/</url>
		</repository-->
		<repository>
			<id>thirds</id>
			<layout>p2</layout>
			<url>http://marge.in.nuxeo.com/p2/third-parties/</url>
		</repository>
	</repositories>
      <build>
        <directory>${project.basedir}/target</directory>

        <plugins>
          <plugin>
            <groupId>org.sonatype.tycho</groupId>
            <artifactId>tycho-maven-plugin</artifactId>
            <version>${tycho-version}</version>
            <extensions>true</extensions>
          </plugin>
          <plugin>
            <groupId>org.sonatype.tycho</groupId>
            <artifactId>target-platform-configuration</artifactId>
            <version>${tycho-version}</version>
            <configuration>
              <resolver>p2</resolver>
            </configuration>
          </plugin>
        </plugins>
      </build>
