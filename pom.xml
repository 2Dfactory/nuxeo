<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.nuxeo</groupId>
    <artifactId>nuxeo-ecm</artifactId>
    <version>5.4.3-I20111020_1649</version>
  </parent>

  <groupId>org.nuxeo.ecm.distribution</groupId>
  <artifactId>nuxeo-distribution</artifactId>
  <packaging>pom</packaging>
  <name>Nuxeo Distribution Parent</name>
  <description>Build package distributions of nuxeo applications</description>

  <modules>
    <module>nuxeo-functional-tests</module>
    <module>nuxeo-startup-wizard</module>
    <module>nuxeo-launcher</module>
    <module>nuxeo-distribution-resources</module>
    <module>nuxeo-distribution-tests</module>
  </modules>

  <profiles>
    <profile>
      <id>nuxeo-coreserver</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
      </modules>
    </profile>
    <profile>
      <id>nuxeo-cap</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-distribution-cap-tests</module>
      </modules>
    </profile>
    <profile>
      <id>nuxeo-dm</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-distribution-cap-tests</module>
        <module>nuxeo-distribution-dm</module>
      </modules>
    </profile>
    <profile>
      <!-- Build JBoss distributions -->
      <id>jboss</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-distribution-cap-tests</module>
        <module>nuxeo-distribution-dm</module>
        <module>nuxeo-distribution-jboss</module>
      </modules>
    </profile>
    <profile>
      <!-- Build Tomcat distributions -->
      <id>tomcat</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-distribution-cap-tests</module>
        <module>nuxeo-distribution-dm</module>
        <module>nuxeo-distribution-tomcat</module>
      </modules>
    </profile>
    <profile>
      <!-- Build all distributions -->
      <id>all-distributions</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-distribution-cap-tests</module>
        <module>nuxeo-distribution-dm</module>
        <module>nuxeo-distribution-jboss</module>
        <module>nuxeo-distribution-tomcat</module>
      </modules>
    </profile>
    <profile>
      <id>itest</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-distribution-cap-tests</module>
        <module>nuxeo-distribution-dm</module>
        <module>nuxeo-distribution-tomcat</module>
        <module>nuxeo-distribution-tomcat-tests</module>
      </modules>
    </profile>
    <profile>
      <id>ftest</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-distribution-cap-tests</module>
        <module>nuxeo-distribution-dm</module>
        <module>nuxeo-distribution-tomcat</module>
        <module>nuxeo-distribution-dm/ftest/selenium</module>
      </modules>
    </profile>
    <profile>
      <!-- Build SDK distributions for use in Nuxeo IDE -->
      <id>sdk</id>
    </profile>
  </profiles>

  <scm>
    <connection>scm:hg:http://hg.nuxeo.org/nuxeo/nuxeo-distribution</connection>
    <developerConnection>
      scm:hg:https://hg.nuxeo.org/nuxeo/nuxeo-distribution
    </developerConnection>
    <url>http://hg.nuxeo.org/nuxeo/nuxeo-distribution</url>
  </scm>

  <repositories>
    <repository>
      <id>public</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>public-snapshot</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public-snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>public</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public</url>
      <name>Nuxeo virtual release repository</name>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
    <pluginRepository>
      <id>public-snapshot</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public-snapshot</url>
      <name>Nuxeo virtual snapshot repository</name>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

</project>
