<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.site.rendering.SiteTemplateManagerService">
  <implementation
          class="org.nuxeo.ecm.platform.site.rendering.SiteTemplateManagerService" />
  <documentation>
    @author Thierry Delprat (td@nuxeo.com)
    Manage templates
  </documentation>

  <!-- you can change the default rendering engine by setting this property to the engine class name
  <property name="engine" value="org.nuxeo.ecm.platform.rendering.fm.FreemarkerEngine"/>
  -->

  <service>
    <provide
      interface="org.nuxeo.ecm.platform.site.api.SiteTemplateManager" />
  </service>

  <extension-point name="template">
  <documentation>
    @author Thierry Delprat (td@nuxeo.com)
    <code>
   </code>
  </documentation>

    <object
      class="org.nuxeo.ecm.platform.site.rendering.TemplateDescriptor" />
  </extension-point>

  <extension-point name="binding">
  <documentation>
    @author Thierry Delprat (td@nuxeo.com)
    <code>
   </code>
  </documentation>

    <object
      class="org.nuxeo.ecm.platform.site.rendering.TemplateBindingDescriptor" />
  </extension-point>

  <extension-point name="transformer">
  <documentation>
    @author Bogdan Stefanescu (bs@nuxeo.com)
    Expose the registration of rendering transformers contributions.
    This extension point will generally be extended by other components
    with specific transformer configuration
    <code>
      <transformer name="wiki" class="org.nuxeo.ecm.platform.wiki.WikiTransformer"/>
   </code>
  </documentation>

    <object
      class="org.nuxeo.ecm.platform.site.rendering.TransformerDescriptor" />
  </extension-point>

</component>
